;Функция запуска преобразования для Single Mode 
;Вх -||-
;Вых adc_out
ADC_start:
	lds		tmpL, ADCSRA		;|
	sbr		tmpL,(1<<ADSC)		;|
	sts		ADCSRA, tmpL		;| Начать преобразование

	ret

;-----------------------------------------------------------------------------------
;
ADC_complete:
	lds		ADC_out, ADCH

	reti

