; Макрос для загрузки двухбатных чисел в два регистра
;ldi16  Регистр high, Регистр low, Число
.MACRO ldi16       
      	  
        ldi 	@1, low (@2)         ; load low byte 
        ldi 	@0, high (@2)        ; Load high byte 

.ENDMACRO              

;-----------------------------------------------------------------------------------

;sti8  Переменная в SRAM, Регистр, Число
.MACRO 	sti8		   // время выполнения = 3 такта    	   

        ldi 	@1, @2       
        sts 	@0, @1		   

.ENDMACRO  

;-----------------------------------------------------------------------------------
;sti16  Переменная в SRAM_H, Переменная в SRAM_L, Регистр, Число
.MACRO 	sti16		       	   

        ldi 	@2, low(@3)       
        sts 	@1, @2	

		ldi 	@2, high(@3)       
        sts 	@0, @2		   

.ENDMACRO  


